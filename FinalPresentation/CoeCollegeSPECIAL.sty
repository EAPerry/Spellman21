% Creates section slide
% 1st parameter = section title, 2nd parameter = subheading
\newcommand{\newsection}[2]{
 \setbeamercolor{background canvas}{bg = gold}
 	\section{#1}
	\begin{frame}
	\Large\color{white}\textbf{#1}
	
%	   \begin{tikzpicture}
%            \fill[EAPyellow] (0,-0.1) rectangle (0.9\textwidth,0);
%            \fill[EAPviolet] (0,0) rectangle (0.9\textwidth, 0.2);
%        \end{tikzpicture}
 %       \\
        \normalsize\color{white}{#2}
	\end{frame}
	\setbeamercolor{background canvas}{bg = white}
}

% Same thing as \newsection but uses \section* instead of \section
% (No Table of Contents Entry)
\newcommand{\fakesection}[2]{
 \setbeamercolor{background canvas}{bg = gold}
 	\section*{#1}
	\begin{frame}
	\Large\color{white}\textbf{#1}
	
%	\begin{tikzpicture}
%            \fill[EAPyellow] (0,-0.1) rectangle (0.9\textwidth,0);
%            \fill[EAPviolet] (0,0) rectangle (0.9\textwidth, 0.2);
%        \end{tikzpicture}
%        \\
        \normalsize\color{white}{#2}
	\end{frame}
	\setbeamercolor{background canvas}{bg = white}
}

